    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev: run current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            // "python": "${env:PYTHON_PLOTPY_DEV}",
            "justMyCode": false,
            "args": [],
            "env": {}
        },
        {
            "name": "Release: current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${env:PYTHON_PLOTPY_RLS}",
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            },
            "justMyCode": false
        }
    ]
}